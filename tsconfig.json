{
  "compilerOptions": {
    "target": "ES2020",              // or your desired version
    "module": "commonjs",
    "outDir": "./dist",              // Output folder for compiled JS
    "rootDir": "./src",              // Root folder for your TS source files
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"], // Include all TypeScript files in the src folder
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist folders
}